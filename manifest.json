{
  "manifest_version": 2 ,
  
  "author": "Color My View Consulting",
  "homepage_url": "https://github.com/kipphoward/valuenetimp",

  "name": "Valuenet form improvements",
  "short_name": "valuenetImp",
  "description": "This extension formats phone numbers on ValueNet appraisal CreateOrder pages",
  "version": "0.1.3",
  "icons": {
    "32": "GreenPanes32.png"
  },
  "content_scripts": [
      {
        "matches": [
          "*://orders.valuenetweb.com/Order/CreateOrder.aspx*",
          "*://orders.valuenetweb.com/Default.html"
        ],
        "js": ["formatPhone.js"],
        "run_at": "document_idle",
        "all_frames": true
      }
  ],
  "permissions": [
    "activeTab"
  ]
}